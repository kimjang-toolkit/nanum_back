{
    "compilerOptions": {
      "target": "es2020",
      "strict": true,
      "preserveConstEnums": true,
      "noEmit": true,
      "sourceMap": false,
      "module":"es2015",
      "moduleResolution":"node",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,  
      "baseUrl": "./",
      "preserveValueImports": false,
      "allowJs": true,  // JS 파일을 TypeScript에서 사용할 수 있도록 허용
      "checkJs": false,  // (선택 사항) JS 파일에 대한 타입 검사를 비활성화
      "paths": {
        "@domain/*": ["../api-interface/src/domain/*"],
        "@interface/*": ["../api-interface/src/interface/*"],
        "@cobuying/*": [
          "../event-func/control/cobuying/*", 
          "../event-func/service/cobuying/*", 
          "../event-func/dao/cobuying/*"
        ],
        "@product/*": [
          "../event-func/control/product/*", 
          "../event-func/service/product/*", 
          "../event-func/dao/product/*"
        ],
        "@auth/*": [
          "../event-func/control/auth/*", 
          "../event-func/service/auth/*", 
          "../event-func/dao/auth/*"
        ],
        "@application/*": [
          "../event-func/control/application/*", 
          "../event-func/service/application/*", 
          "../event-func/dao/application/*",
        ],
        "@common/*": ["../event-func/common/*"],
        "@query-interface/*": ["../event-func/query-interface/*"]
    }
    },
    // "exclude": ["node_modules", "**/*.test.ts"]
  }