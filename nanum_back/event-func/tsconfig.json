{
    "compilerOptions": {
      "target": "es2020",
      "strict": true,
      "preserveConstEnums": true,
      "noEmit": true,
      "sourceMap": false,
      "module":"es2015",
      "moduleResolution":"node",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,  
      "baseUrl": "./",
      "preserveValueImports": false,
      "paths": {
        "@domain/*": ["../api-interface/src/domain/*"],
        "@interface/*": ["../api-interface/src/interface/*"],
        "@cobuying/*": [
          "../event-func/control/cobuying/*", 
          "../event-func/service/cobuying/*", 
          "../event-func/dao/cobuying/*"
        ],
        "@product/*": ["../event-func/control/product", "../event-func/service/product", "../event-func/dao/product"],
        "@auth/*":["../event-func/control/auth", "../event-func/service/auth", "../event-func/dao/auth"],
    }
    },
    // "exclude": ["node_modules", "**/*.test.ts"]
  }